// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Result {
  id           Int    @id @default(autoincrement())
  homeTeamName String
  awayTeamName String

  homeTeamScore Int
  awayTeamScore Int

  Prediction Prediction[]
}

model Prediction {
  id       Int      @id @default(autoincrement())
  resultId Int
  siteName String
  date     DateTime

  homeTeamName String
  awayTeamName String

  homeTeamScore Int
  awayTeamScore Int

  overValue       Int
  overConsensus   Int
  spreadValue     Int
  spreadConcensus Int

  ResultId Result @relation(fields: [resultId], references: [id])
}
