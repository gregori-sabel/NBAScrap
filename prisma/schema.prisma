// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id   Int      @id @default(autoincrement())
  date DateTime

  homeTeamName String
  awayTeamName String

  Prediction Prediction[]
  Result     Result[]
}

model Result {
  id     Int @id @default(autoincrement())
  gameId Int

  homeTeamScore Int
  awayTeamScore Int

  GameId Game @relation(fields: [gameId], references: [id])
}

model Prediction {
  id            Int       @id @default(autoincrement())
  gameId        Int
  siteName      String
  especificDate DateTime?

  homeTeamScore Int?
  awayTeamScore Int?

  overValue       Int?
  overConsensus   Int?
  spreadValue     Int?
  spreadConcensus Int?

  GameId Game @relation(fields: [gameId], references: [id])
}
